@model IEnumerable<Employee>

@{
    var pageName = "Сотрудники";
    ViewData["Title"] = pageName;
}

<h2>@pageName</h2>

@if (Model.Count() <= 0)
{
    <h3>You haven't created any @pageName yet...</h3>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkedHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BonusJobs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalSalary)
            </th>

            <th></th>
        </tr>
    </thead>
    @{double total = 0;}
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkedHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BonusJobs)
                </td>
                <td>
                    @{total = item.CountSalary();}
                    @total.ToString();
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |*@
                    @* <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info">Details</a> |*@
                    @*<a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>